<view>
    <columns>
        <column name="id" order="100">
            <widget type="number" fieldname="id" readonly="true" />
        </column>
        <column name="name" order="110">
            <widget type="text" fieldname="name" required="true" maxlength="100" />
        </column>
        <column name="description" order="120" display="none">
            <widget type="textarea" fieldname="description" />
        </column>
        <column name="active" order="130" display="center">
            <widget type="checkbox" fieldname="active" />
        </column>
        <column name="created-at" order="140" display="right">
            <widget type="datetime" fieldname="created_at" readonly="true" />
        </column>
        <column name="updated-at" order="150" display="right">
            <widget type="datetime" fieldname="updated_at" readonly="true" />
        </column>
    </columns>
</view>
